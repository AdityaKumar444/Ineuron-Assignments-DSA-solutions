// SLL.cpp is provided in folder

#include<bits/stdc++.h>
#include "SLL.cpp"
using namespace std ;
class ExtendedSLL : public SLL
{
    public:
        ExtendedSLL() : SLL() {}
        int greatest();
        int findOccurence(int);
};
int ExtendedSLL::findOccurence(int item)
{
    int max = greatest() ;
    int *arr { new int[max]{}} ;
    node *traverse ;
    traverse = getStart() ;
    while(traverse!=NULL)
    {
        arr[traverse->data]++ ;
        traverse = traverse->next ;
    }
    return arr[item] ;
}
int ExtendedSLL::greatest()
{
    node *traverse ;
    int highest = INT_MIN ;
    traverse = getStart() ;
    while(traverse->next!=NULL)
    {
        if(traverse->data > highest)
        highest = traverse->data ;
        traverse = traverse->next ;
    }
    return highest ;
}
